<h1>Wishlist</h1>

<div class="row small-up-1 medium-up-2 large-up-3">

<% @products.each do |item| %>
  <div class="column">
    <div class="callout product-box">
      <p><a href="/products/<%= item.id %>"><%= image_tag "#{item.image}", class: 'thumbnail' %></a></p>
      <p class="lead">Product Name: <%= item.name %></p>
      <p class="subheader"><%= item.brand %></p>
    </div>
  </div>
<% end %>

</div>