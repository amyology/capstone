<div class="row">

  <% if !@searched %>
    
    <div class="medium-6 large-6 columns">
      <h1>ColorCrush</h1>
      <p class="subheader">Blurb goes here. <br> Blurb blurb blurb.<br> Bluuurb.</p>
    </div>

    <div class="show-for-medium show-for-large medium-6 large-6 columns">
      <img src="http://placehold.it/400x370&text=PSR1257 + 12 C">
    </div>

  <% end %>

</div>

<div class="row small-up-1 medium-up-2 large-up-3">

  <% if @searched %>
    <% if @searched.length > 0 %>
      <p class="lead">Results</p>
      <% @searched.each do |product| %>
        <div class="column">
          <div class="callout product-box">
            <p><a href="/products/<%= product.id %>"><%= image_tag "#{product.image}", class: 'thumbnail' %></a></p>
            <p class="lead"><a href="/products/<%= product.id %>"><%= product.name %></a></p>
            <p class="subheader"><%= product.brand %></p>
          </div>
        </div>
      <% end %>  
    <% else %>
      <div class="column">
        <p class="lead">No results.</p> 
          Try another search.
      </div>
    <% end %>

  <% else %>
    <hr>
    <p class="lead">Recently Added</p>
      <% @recent_products.each do |product| %>
        <a href="/products/<%= product.id %>"><%= image_tag "#{product.image}", class: 'thumbnail' %></a>
      <% end %>

    <hr>

    <p class="lead">All Products</p>
      <% @products.each do |product| %>
        <div class="column">
          <div class="callout product-box">    
            <p><a href="/products/<%= product.id %>"><%= image_tag "#{product.image}", class: 'thumbnail' %></a></p>
            <a href="/products/<%= product.id %>"><p class="lead"><%= product.name %></a></p>
            <p class="subheader"><%= product.brand %></p>
          </div>
        </div>
      <% end %>
  <% end %>

  <div class="row column">
    <a class="button hollow expanded">Load More</a>
  </div>

</div>

</div>