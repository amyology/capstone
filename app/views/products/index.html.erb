<div class="row">

  <% if @searched %>
    <p class="lead">Results</p>
  <% else %>
    <div class="medium-7 large-3 columns">
      <h1>ColorCrush</h1>
      <p class="subheader">Blurb goes here. <br> Blurb blurb blurb.<br> Bluuurb.</p>
    </div>

    <div class="show-for-large large-6 columns">
      <img src="http://placehold.it/400x370&text=PSR1257 + 12 C" alt="picture of space">
    </div>

    <div class="medium-5 large-3 columns">
      <div class="callout secondary">
        <form>
          <div class="row">
            <div class="small-12 columns">
              <label>Find Your Dream Planet
                <input type="text" placeholder="Search destinations">
              </label>
            </div>
            <div class="small-12 columns">
              <label>Number of Moons
                <input type="number" placeholder="Moons required">
              </label>
              <button type="submit" class="button">Search Now!</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  <% end %>

</div>

<div class="row column">
  <hr>
</div>

<div class="row small-up-1 medium-up-2 large-up-3">

  <% if @searched %>
    <% if @searched.length > 0 %>
      <% @searched.each do |product| %>
        <div class="column">
          <div class="callout">
            <p><a href="/products/<%= product.id %>"><%= image_tag "#{product.image}", class: 'thumbnail' %></a></p>
            <p class="lead"><%= product.name %></p>
            <p class="subheader"><%= product.brand %></p>
          </div>
        </div>
      <% end %>  
    <% else %>
      No results. Try another search term.
    <% end %>

  <% else %>
    <p class="lead">Recently Added</p>
    <% @recent_products.each do |product| %>
      <a href="/products/<%= product.id %>"><%= image_tag "#{product.image}", class: 'thumbnail' %></a>
    <% end %>  

    <br><br>

    <p class="lead">All Products</p>
      <% @products.each do |product| %>
        <div class="column">
          <div class="callout">    
            <a href="/products/<%= product.id %>"><%= image_tag "#{product.image}", class: 'thumbnail' %></a>
            <p class="lead"><%= product.name %></p>
            <p class="subheader"><%= product.brand %></p>
          </div>
        </div>
      <% end %>
  <% end %>

</div>

<div class="row column">
  <a class="button hollow expanded">Load More</a>
</div>

</div>