<h1>Add Product</h1>

<%= form_tag '/products', method: :post do %>

  <%= label_tag :name %>
  <%= text_field_tag :name %> <br>

  <%= label_tag :brand %>
  <%= text_field_tag :brand %> <br>

  <%= label_tag :finish %>
  <%= text_field_tag :finish %> <br>

  <%= label_tag :undertone %>
  <%= text_field_tag :undertone %> <br>

  <%= label_tag :product_type %>
  <%= text_field_tag :product_type %> <br>

  <%= label_tag :product_color %>
  <%= text_field_tag :product_color %> <br>

  <%= label_tag :image %>
  <%= text_field_tag :image %> <br>

  <%= submit_tag 'Finish' %>

<% end %>